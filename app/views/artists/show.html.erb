<% breadcrumb :artist, @artist %>

<% content_for :page_title do %>
  <%= @artist.name %>
<% end %>

<% content_for :header_links do %>
  <span class="pull-right">
    <%= render 'shared/back_link',
      last_search_query: @last_search_query,
      path: labels_path %>
  </span>
<% end %>

<div class="container p-t-md">
  <%= render 'shared/carousel', object: @artist %>
  <%= render 'shared/header_panel' %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'records/search_panel/search_box',
        q: @q, scope: @artist %>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <small class="pull-right">
            <%= page_entries_info @records %>
          </small>

          <h5 class="m-t-0">Related Records</h5>

          <%= render 'records/records_table',
            records: @records, object: @artist, q: @q %>
        </div>
      </div>
    </div>
  </div>
</div>
