<% breadcrumb :show_artist, @artist %>

<h2 class='page-title'><%= @artist.name %></h3>

<h3>Artist details</h3>

<!-- START PHOTOS -->
<% if @artist.photos.present? %>
  <% if @artist.photos.count > 5 %>
    <!-- START CAROUSEL -->
    <div id="owl-carousel">
      <% @artist.photos.each do |photo| %>
        <div class="item">
          <%= image_tag attachment_url(photo, :image, :fill, 200, 200) %>
        </div>
      <% end %>
    </div>
    <!-- END CAROUSEL -->
  <% else %>
    <%= image_tag attachment_url(@artist.photos.first, :image, :fill, 200, 200) unless @artist.photos.blank? %>
  <% end %>
<% end %>
<!-- END PHOTOS -->

  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <strong> Name </strong>
        </td>
        <td>
          <%= @artist.name %>
        </td>
      </tr>
    </tbody>
  </table>

<div id="artist-records">
  <table>
    <thead>
      <tr>
        <th> Cover </th>
        <th> Label </th>
        <th> Genre </th>
        <th> Record Format </th>
        <th> Condition </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @artist.records.each do |record| %>
        <tr>
          <td> <%= image_tag record.cover_photo unless record.cover_photo.blank? %> </td>
          <td> <%= record.label.name %> </td>
          <td> <%= record.genre.name %> </td>
          <td> <%= record.price.record_format.name %> </td>
          <td> <%= record.get_condition %> </td>
          <td> <%= link_to 'show', record %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
