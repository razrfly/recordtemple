<h2 class="page-title">Artists</h2>

<div class="cards">
  <% @artists.each do |artist| %>
    <div class="card">
      <div class="card-image">
        <%= link_to(image_tag(attachment_url(artist.photos.first, :image, :fill, 200, 200)), artist) unless artist.photos.blank? %><br/>
      </div>
      <div class="card-header">
        <%= link_to artist.name, artist %>
      </div>
      <div class="card-copy">
        <p> Lorem ipsum </p>
      </div>

    </div>
  <% end %>
</div>
<%= paginate @artists %>
