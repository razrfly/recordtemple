<div class="container p-t-md">
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="m-t-0 m-b-0"
        style="display: inline-block; padding-top: 5px;">

        <%= @artists.model_name.plural.humanize %>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= search_form_for @q do |search_form| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <h5 class="m-t-0">Search</h5>

            <div class="form-group">
              <%= search_form.label :name %>
              <%= search_form.select :id_eq,
                @q.id_eq.present? ?
                  Artist.where(id: @q.id_eq).
                    map { |artist| [artist.name, artist.id] } :
                  [],
                {},
                { class: 'form-control selectize_remote',
                data: { remote_url: '/artists.json' } } %>
            </div>

            <div class="form-group">
              <%= search_form.label :label_id %>
              <%= search_form.select :labels_id_eq,
                @q.labels_id_eq.present? ?
                  Label.where(id: @q.labels_id_eq).
                    map { |label| [label.name, label.id] } :
                  [],
                {},
                { class: 'form-control selectize_remote',
                data: { remote_url: '/labels.json' } } %>
            </div>

            <div class="form-group">
              <%= search_form.label :genre_id %>
              <%= search_form.collection_select :genres_id_eq,
                Genre.joins(:records).uniq, :id, :name,
                { include_blank: true },
                { class: 'form-control selectize_remote' } %>
            </div>

            <div class="checkbox">
              <label>
                <%= search_form.check_box :records_id_null %>

                Only without records
              </label>
            </div>

            <div class="checkbox">
              <label>
                <%= search_form.check_box :songs_id_not_null %>
                Only with songs
              </label>
            </div>

            <div class="checkbox">
              <label>
                <%= search_form.check_box :photos_id_not_null %>
                Only with photos
              </label>
            </div>

            <%= search_form.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-9">
      <div class="row">
        <% @artists.each do |artist| %>
          <div class="col-md-3">
            <div class="panel panel-default">
              <div class="panel-body">
                <%= photo_link_helper(artist, 200, 200) %>

                <p class="text-center">
                  <%= link_to truncate(artist.name, length: 20), artist_path(artist) %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <%= paginate @artists %>
      </div>
    </div>
  </div>
</div>
