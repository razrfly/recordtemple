<footer class="pt-16">
  <div class="bg-olive-950/[0.025] py-16 text-olive-950 dark:bg-white/5 dark:text-white">
    <div class="mx-auto w-full max-w-2xl px-6 md:max-w-3xl lg:max-w-7xl lg:px-10">
      <div class="flex flex-col gap-16">
        <!-- Footer Navigation -->
        <nav class="grid grid-cols-2 gap-8 text-sm/7 sm:grid-cols-4 lg:grid-cols-4">
          <!-- Logo Column -->
          <div class="col-span-2 sm:col-span-4 lg:col-span-1">
            <%= link_to root_path, class: "inline-flex items-center" do %>
              <%= image_tag "logo.png", alt: "RecordTemple", style: "height: 50px; width: auto;" %>
            <% end %>
            <p class="mt-4 text-sm text-olive-600 dark:text-olive-400">
              Your destination for curated vinyl records.
            </p>
          </div>

          <!-- Browse -->
          <div>
            <h3 class="font-medium">Browse</h3>
            <ul role="list" class="mt-2 flex flex-col gap-2">
              <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                <%= link_to "All Records", records_path %>
              </li>
              <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                <%= link_to "Artists", artists_path %>
              </li>
              <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                <%= link_to "Labels", labels_path %>
              </li>
            </ul>
          </div>

          <!-- Discovery -->
          <div>
            <h3 class="font-medium">Discover</h3>
            <ul role="list" class="mt-2 flex flex-col gap-2">
              <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                <%= link_to "Random Artist", random_artists_path %>
              </li>
              <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                <%= link_to "Random Label", random_labels_path %>
              </li>
            </ul>
          </div>

          <!-- Account -->
          <div>
            <h3 class="font-medium">Account</h3>
            <ul role="list" class="mt-2 flex flex-col gap-2">
              <% if current_user.present? %>
                <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                  <%= link_to "Dashboard", records_path %>
                </li>
                <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                  <%= link_to "Sign out", users_sign_out_path %>
                </li>
              <% else %>
                <li class="text-olive-700 hover:text-olive-900 dark:text-olive-400 dark:hover:text-olive-200 transition-colors">
                  <%= link_to "Sign in", users_sign_in_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>

        <!-- Fineprint -->
        <div class="text-sm/7 text-olive-600 dark:text-olive-500">
          <p>&copy; <%= Date.current.year %> RecordTemple. All rights reserved.</p>
        </div>
      </div>
    </div>
  </div>
</footer>
