<%# Discovery Carousel Component
   A tabbed carousel for discovery pages with horizontal scrolling.

   Required locals:
     - popular_items: Collection for "Most Collected" tab
     - recent_items: Collection for "Recently Added" tab
     - hidden_gem_items: Collection for "Hidden Gems" tab
     - item_path_helper: Lambda for generating item paths, e.g. ->(item) { artist_path(item) }
     - type: :artist or :label (for discovery_card)

   Optional locals:
     - popular_label: Custom label for popular tab (default: "Most Collected")
     - recent_label: Custom label for recent tab (default: "Recently Added")
     - hidden_gem_label: Custom label for hidden gems tab (default: "Hidden Gems")
%>

<% popular_label ||= "Most Collected" %>
<% recent_label ||= "Recently Added" %>
<% hidden_gem_label ||= "Hidden Gems" %>

<% if popular_items.any? || recent_items.any? || hidden_gem_items.any? %>
  <section class="mb-12" data-controller="discovery-tabs" data-discovery-tabs-active-tab-value="popular">
    <%# Tab Navigation %>
    <div class="flex items-center justify-between mb-6">
      <nav class="flex gap-2" role="tablist" aria-label="Discovery categories">
        <% if popular_items.any? %>
          <button
            type="button"
            role="tab"
            data-discovery-tabs-target="tab"
            data-tab="popular"
            data-action="click->discovery-tabs#switch"
            aria-selected="true"
            class="px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 bg-olive-900 text-white"
          >
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <%= popular_label %>
            </span>
          </button>
        <% end %>

        <% if recent_items.any? %>
          <button
            type="button"
            role="tab"
            data-discovery-tabs-target="tab"
            data-tab="recent"
            data-action="click->discovery-tabs#switch"
            aria-selected="false"
            class="px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 bg-olive-100 text-olive-700 hover:bg-olive-200"
          >
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= recent_label %>
            </span>
          </button>
        <% end %>

        <% if hidden_gem_items.any? %>
          <button
            type="button"
            role="tab"
            data-discovery-tabs-target="tab"
            data-tab="gems"
            data-action="click->discovery-tabs#switch"
            aria-selected="false"
            class="px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 bg-olive-100 text-olive-700 hover:bg-olive-200"
          >
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              <%= hidden_gem_label %>
            </span>
          </button>
        <% end %>
      </nav>
    </div>

    <%# Tab Panels with Carousels %>

    <%# Popular/Most Collected Panel %>
    <% if popular_items.any? %>
      <div
        role="tabpanel"
        data-discovery-tabs-target="panel"
        data-tab="popular"
        aria-hidden="false"
        class="relative"
      >
        <%# Left scroll button %>
        <button
          type="button"
          data-action="click->discovery-tabs#scrollLeft"
          class="absolute left-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center text-olive-700 hover:bg-white hover:text-olive-900 transition-all duration-200 -ml-5 opacity-0 hover:opacity-100 focus:opacity-100"
          aria-label="Scroll left"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <%# Carousel %>
        <div
          data-discovery-tabs-target="carousel"
          class="flex gap-4 overflow-x-auto scroll-smooth scrollbar-hide scroll-snap-x pb-4 -mx-2 px-2"
        >
          <% popular_items.each do |item| %>
            <div class="flex-none w-44 sm:w-48 scroll-snap-start">
              <%= render 'shared/discovery_card',
                  item: item,
                  path: item_path_helper.call(item),
                  type: type,
                  featured: true %>
            </div>
          <% end %>
        </div>

        <%# Right scroll button %>
        <button
          type="button"
          data-action="click->discovery-tabs#scrollRight"
          class="absolute right-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center text-olive-700 hover:bg-white hover:text-olive-900 transition-all duration-200 -mr-5 opacity-0 hover:opacity-100 focus:opacity-100"
          aria-label="Scroll right"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>
    <% end %>

    <%# Recently Added Panel %>
    <% if recent_items.any? %>
      <div
        role="tabpanel"
        data-discovery-tabs-target="panel"
        data-tab="recent"
        aria-hidden="true"
        class="relative hidden"
      >
        <button
          type="button"
          data-action="click->discovery-tabs#scrollLeft"
          class="absolute left-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center text-olive-700 hover:bg-white hover:text-olive-900 transition-all duration-200 -ml-5 opacity-0 hover:opacity-100 focus:opacity-100"
          aria-label="Scroll left"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <div
          data-discovery-tabs-target="carousel"
          class="flex gap-4 overflow-x-auto scroll-smooth scrollbar-hide scroll-snap-x pb-4 -mx-2 px-2"
        >
          <% recent_items.each do |item| %>
            <div class="flex-none w-44 sm:w-48 scroll-snap-start">
              <%= render 'shared/discovery_card',
                  item: item,
                  path: item_path_helper.call(item),
                  type: type %>
            </div>
          <% end %>
        </div>

        <button
          type="button"
          data-action="click->discovery-tabs#scrollRight"
          class="absolute right-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center text-olive-700 hover:bg-white hover:text-olive-900 transition-all duration-200 -mr-5 opacity-0 hover:opacity-100 focus:opacity-100"
          aria-label="Scroll right"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>
    <% end %>

    <%# Hidden Gems Panel %>
    <% if hidden_gem_items.any? %>
      <div
        role="tabpanel"
        data-discovery-tabs-target="panel"
        data-tab="gems"
        aria-hidden="true"
        class="relative hidden"
      >
        <button
          type="button"
          data-action="click->discovery-tabs#scrollLeft"
          class="absolute left-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center text-olive-700 hover:bg-white hover:text-olive-900 transition-all duration-200 -ml-5 opacity-0 hover:opacity-100 focus:opacity-100"
          aria-label="Scroll left"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <div
          data-discovery-tabs-target="carousel"
          class="flex gap-4 overflow-x-auto scroll-smooth scrollbar-hide scroll-snap-x pb-4 -mx-2 px-2"
        >
          <% hidden_gem_items.each do |item| %>
            <div class="flex-none w-44 sm:w-48 scroll-snap-start">
              <%= render 'shared/discovery_card',
                  item: item,
                  path: item_path_helper.call(item),
                  type: type %>
            </div>
          <% end %>
        </div>

        <button
          type="button"
          data-action="click->discovery-tabs#scrollRight"
          class="absolute right-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center text-olive-700 hover:bg-white hover:text-olive-900 transition-all duration-200 -mr-5 opacity-0 hover:opacity-100 focus:opacity-100"
          aria-label="Scroll right"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>
    <% end %>
  </section>

  <hr class="border-olive-200 mb-10">
<% end %>
