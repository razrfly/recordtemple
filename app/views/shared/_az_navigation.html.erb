<%# A-Z Navigation Component
   Quick alphabetical navigation for discovery pages.

   Required locals:
     - base_path: The path helper to use (e.g., artists_path, labels_path)
     - available_letters: Array of letters that have content
     - current_letter: Currently selected letter (or nil for all)
%>

<nav class="mb-8" aria-label="Alphabetical navigation">
  <div class="flex flex-wrap items-center justify-center gap-1 sm:gap-2">
    <%# "All" link %>
    <%= link_to base_path.call,
        class: "px-2.5 py-1.5 text-sm font-medium rounded-lg transition-colors #{current_letter.blank? ? 'bg-olive-950 text-white' : 'text-olive-600 hover:bg-olive-100 hover:text-olive-900'}",
        "aria-current": current_letter.blank? ? "page" : nil do %>
      All
    <% end %>

    <%# Letter links %>
    <% ('A'..'Z').each do |letter| %>
      <% has_content = available_letters.include?(letter) %>
      <% is_current = current_letter == letter %>

      <% if has_content %>
        <%= link_to base_path.call(letter: letter),
            class: "px-2.5 py-1.5 text-sm font-medium rounded-lg transition-colors #{is_current ? 'bg-olive-950 text-white' : 'text-olive-600 hover:bg-olive-100 hover:text-olive-900'}",
            "aria-current": is_current ? "page" : nil do %>
          <%= letter %>
        <% end %>
      <% else %>
        <span class="px-2.5 py-1.5 text-sm font-medium text-olive-300 cursor-not-allowed">
          <%= letter %>
        </span>
      <% end %>
    <% end %>

    <%# "#" for numbers/symbols %>
    <% has_numeric = available_letters.any? { |l| !l.match?(/[A-Za-z]/) } %>
    <% is_numeric_current = current_letter == "#" %>

    <% if has_numeric %>
      <%= link_to base_path.call(letter: "#"),
          class: "px-2.5 py-1.5 text-sm font-medium rounded-lg transition-colors #{is_numeric_current ? 'bg-olive-950 text-white' : 'text-olive-600 hover:bg-olive-100 hover:text-olive-900'}",
          "aria-current": is_numeric_current ? "page" : nil do %>
        #
      <% end %>
    <% else %>
      <span class="px-2.5 py-1.5 text-sm font-medium text-olive-300 cursor-not-allowed">
        #
      </span>
    <% end %>
  </div>
</nav>
