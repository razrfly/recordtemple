<%# Discovery Card Component
   A card for artist or label discovery pages.

   Required locals:
     - item: Artist or Label object with records_count attribute
     - path: Path to the show page
     - type: :artist or :label (for icon and alt text)

   Optional locals:
     - featured: Boolean, whether to show as a featured/top card (larger)
%>

<% featured ||= false %>

<%= link_to path,
    class: "group block bg-white rounded-2xl shadow-sm ring-1 ring-olive-900/5 hover:shadow-xl hover:ring-olive-900/10 transition-all duration-300 overflow-hidden" do %>

  <div class="relative aspect-square bg-olive-100">
    <% if item.cover.present? %>
      <%= image_tag item.cover.variant(resize_to_fill: [400, 400]),
          class: "w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-500",
          alt: item.name,
          loading: "lazy" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-olive-100 to-olive-200">
        <% if type == :artist %>
          <svg class="w-16 h-16 sm:w-20 sm:h-20 text-olive-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        <% else %>
          <svg class="w-16 h-16 sm:w-20 sm:h-20 text-olive-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        <% end %>
      </div>
    <% end %>

    <%# Record count badge %>
    <div class="absolute bottom-3 right-3 bg-olive-950/80 backdrop-blur-sm text-white px-2.5 py-1 rounded-full text-xs font-medium flex items-center gap-1.5 shadow-lg">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
      </svg>
      <%= item.records_count %>
    </div>

    <% if featured %>
      <div class="absolute top-3 left-3 bg-amber-500 text-white px-2 py-0.5 rounded-full text-xs font-semibold uppercase tracking-wide shadow-lg">
        Top
      </div>
    <% end %>
  </div>

  <div class="p-4">
    <h3 class="font-display text-lg text-olive-950 truncate group-hover:text-olive-700 transition-colors">
      <%= item.name %>
    </h3>
    <p class="text-sm text-olive-600 mt-1">
      <%= pluralize(item.records_count, 'record') %>
    </p>
  </div>
<% end %>
