<%# Discovery Card Component
   A card for artist, label, or genre discovery pages with collage support.

   Required locals:
     - item: Artist, Label, or Genre object with records_count attribute
     - path: Path to the show page
     - type: :artist, :label, or :genre (for icon and alt text)
     - user_id: User ID to scope record queries to

   Optional locals:
     - featured: Boolean, whether to show as a featured/top card (larger)
     - show_collage: Boolean, whether to show a 2x2 collage instead of single cover
     - preloaded_covers: Hash of entity_id => [covers] for batch-loaded covers (N+1 optimization)
%>

<% featured ||= false %>
<% show_collage ||= false %>
<% preloaded_covers ||= nil %>
<%# Use preloaded covers if available, otherwise fall back to querying (for backwards compatibility) %>
<% sample_covers = if preloaded_covers
     preloaded_covers[item.id] || []
   elsif show_collage
     item.sample_covers(4, user_id)
   else
     []
   end %>
<%# For single cover display: use first from sample_covers, or fall back to model method %>
<% single_cover = sample_covers.first || (preloaded_covers.nil? && !show_collage ? item.cover(user_id) : nil) %>

<%= link_to path,
    class: "group block bg-white rounded-2xl shadow-sm ring-1 ring-olive-900/5 hover:shadow-xl hover:ring-olive-900/10 hover:-translate-y-1 transition-all duration-300 overflow-hidden" do %>

  <div class="relative aspect-square bg-olive-100 overflow-hidden">
    <% if show_collage && sample_covers.length >= 4 %>
      <%# 2x2 Collage Grid %>
      <div class="grid grid-cols-2 grid-rows-2 w-full h-full">
        <% sample_covers.first(4).each_with_index do |cover, index| %>
          <div class="relative overflow-hidden">
            <%= image_tag cdn_image_url(cover.variant(resize_to_fill: [200, 200])),
                class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                style: "transition-delay: #{index * 50}ms",
                alt: "#{item.name} record #{index + 1}",
                loading: "lazy",
                decoding: "async" %>
          </div>
        <% end %>
      </div>
    <% elsif show_collage && sample_covers.length >= 2 %>
      <%# 2-image split %>
      <div class="grid grid-cols-2 w-full h-full">
        <% sample_covers.first(2).each_with_index do |cover, index| %>
          <div class="relative overflow-hidden">
            <%= image_tag cdn_image_url(cover.variant(resize_to_fill: [200, 400])),
                class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                style: "transition-delay: #{index * 75}ms",
                alt: "#{item.name} record #{index + 1}",
                loading: "lazy",
                decoding: "async" %>
          </div>
        <% end %>
      </div>
    <% elsif single_cover.present? %>
      <%# Single cover %>
      <%= image_tag cdn_image_url(single_cover.variant(resize_to_fill: [400, 400])),
          class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500",
          alt: item.name,
          loading: "lazy",
          decoding: "async" %>
    <% else %>
      <%# Placeholder - Vinyl Record Icon %>
      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-olive-100 to-olive-200 group-hover:from-olive-200 group-hover:to-olive-300 transition-colors duration-300">
        <svg class="w-16 h-16 sm:w-20 sm:h-20 text-olive-300 group-hover:text-olive-400 transition-colors duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <%# Outer record edge %>
          <circle cx="12" cy="12" r="10" stroke-width="1.5"/>
          <%# Groove rings %>
          <circle cx="12" cy="12" r="7.5" stroke-width="0.5" opacity="0.6"/>
          <circle cx="12" cy="12" r="5.5" stroke-width="0.5" opacity="0.4"/>
          <%# Label area %>
          <circle cx="12" cy="12" r="3.5" stroke-width="1" fill="currentColor" fill-opacity="0.15"/>
          <%# Spindle hole %>
          <circle cx="12" cy="12" r="1" stroke-width="1"/>
        </svg>
      </div>
    <% end %>

    <%# Hover overlay %>
    <div class="absolute inset-0 bg-gradient-to-t from-olive-950/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

    <%# Record count badge %>
    <div class="absolute bottom-3 right-3 bg-olive-950/80 backdrop-blur-sm text-white px-2.5 py-1 rounded-full text-xs font-medium flex items-center gap-1.5 shadow-lg group-hover:bg-olive-950 transition-colors duration-300">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
      </svg>
      <%= item.records_count %>
    </div>

    <% if featured %>
      <div class="absolute top-3 left-3 bg-amber-500 text-white px-2 py-0.5 rounded-full text-xs font-semibold uppercase tracking-wide shadow-lg animate-pulse-subtle">
        Top
      </div>
    <% end %>

    <%# View indicator on hover %>
    <div class="absolute bottom-3 left-3 bg-white/90 backdrop-blur-sm text-olive-950 px-3 py-1.5 rounded-full text-xs font-medium opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300 flex items-center gap-1.5">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      View
    </div>
  </div>

  <div class="p-4">
    <h3 class="font-display text-lg text-olive-950 truncate group-hover:text-olive-700 transition-colors duration-200">
      <%= item.name %>
    </h3>
    <p class="text-sm text-olive-600 mt-1 group-hover:text-olive-500 transition-colors duration-200">
      <%= pluralize(item.records_count, 'record') %>
    </p>
  </div>
<% end %>
