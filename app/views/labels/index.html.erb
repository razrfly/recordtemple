<div class="container p-t-md">
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="m-t-0 m-b-0"
        style="display: inline-block; padding-top: 5px;">

        <%= @labels.model_name.plural.humanize %>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/search_box', q: @q,
        search_fields: {
          base_klass: @labels.klass,
          artist_association: 'artists',
          genre_association: 'genres',
          without_records: true
        } %>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <small class="pull-right">
            <%= page_entries_info @labels %>
          </small>

          <h5 class="m-t-0">Results</h5>

          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Records</th>
                <th>Artists</th>
                <th>Genre</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @labels.each do |label| %>
                <tr>
                  <td><%= label.name %></td>
                  <td><%= label.records.size %></td>
                  <td><%= label.artists.size %></td>
                  <td><%= label.genres.size %></td>

                  <td>
                    <%= link_to label_path(label) do %>
                      <span class="icon icon-magnifying-glass"></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="text-center">
          <%= paginate @labels %>
        </div>
      </div>
    </div>
  </div>
</div>
