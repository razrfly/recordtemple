<div class="col-md-offset-3 col-md-6">
  <%= render 'layouts/message' %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: {class: "m-x-auto text-center app-login-form"}) do |f| %>

    <%= link_to root_path, class: 'app-brand m-b-md' do %>
      <%= image_tag 'bootstrap/brand-blue.png', alt: 'brand' %>
    <% end %>

    <div class="form-group">
      <%= f.input :email, autofocus: true, label: false,
        placeholder: "Email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :password, label: false, autocomplete: "off",
        placeholder: "Password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :password_confirmation, label: false,
        autocomplete: "off", placeholder: "Password Confirmation",
        class: "form-control" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
