<% breadcrumb :genre, @genre %>

<% content_for :page_title do %>
  <%= @genre.name %>
<% end %>

<div class="container p-t-md">
  <%= render 'shared/header_panel' %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'records/search_panel/search_box', q: @q, object: @genre %>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <small class="pull-right">
            <%= page_entries_info @records %>
          </small>

          <h5 class="m-t-0">Related Records</h5>

          <%= render 'records/records_table',
            records: @records, object: @genre, q: @q %>
        </div>
      </div>
    </div>
  </div>
</div>
