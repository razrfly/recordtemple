<% breadcrumb :prices %>

<h2 class="page-title">Prices</h2>

<div id="prices">
  <h3>Price Index</h3>
  <table>
    <thead>
      <tr>
        <th> <%= sort_link @search, :artist_name, "Name" %> </th>
        <th> <%= sort_link @search, :label_name, "Label" %> </th>
        <th> <%= sort_link @search, :record_format_name, "Record Format" %> </th>
        <th> <%= sort_link @search, :price_low, "Price Low" %> </th>
        <th> <%= sort_link @search, :price_high, "Price High" %> </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @prices.each do |price| %>
        <tr>
          <td> <%= link_to price.artist.name, price.artist %> </td>
          <td> <%= link_to(price.label.name, price.label) if price.label %> </td>
          <td> <%= price.record_format.name %> </td>
          <td> <%= price.price_low %> </td>
          <td> <%= price.price_high %> </td>
          <td> <%= link_to 'show', price %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @prices %>
  <%= page_entries_info @prices %>
</div>

<%= render 'filters' %>
