<%= ui_section padding: :md do %>
  <%= ui_container do %>
    <div class="mx-auto max-w-sm">
      <%= ui_card padding: :md, shadow: true do %>
        <div class="text-center mb-5">
          <%= link_to root_path do %>
            <%= image_tag "logo.png", alt: "RecordTemple", style: "height: 40px; width: auto;", class: "mx-auto" %>
          <% end %>
          <h1 class="font-display text-xl text-olive-950 dark:text-white mt-4">
            Sign in to RecordTemple
          </h1>
          <p class="mt-1 text-sm text-olive-600 dark:text-olive-400">
            Enter your email for a magic link
          </p>
        </div>

        <%= form_for @session, url: send(Passwordless.mounted_as).sign_in_path, data: { turbo: false } do |f| %>
          <% email_field_name = :"passwordless[#{@email_field}]" %>

          <div class="space-y-1 mb-4">
            <%= label_tag email_field_name, "Email address", class: "block text-sm/6 font-medium text-olive-950 dark:text-white" %>
            <%= text_field_tag email_field_name,
                params.fetch(email_field_name, nil),
                type: :email,
                autocomplete: "email",
                required: true,
                placeholder: "you@example.com",
                class: "block w-full rounded-lg px-3 py-1.5 text-sm bg-white dark:bg-white/5 border border-olive-300 dark:border-white/10 text-olive-950 dark:text-white placeholder:text-olive-400 dark:placeholder:text-olive-500 shadow-sm focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-olive-500" %>
          </div>

          <%= f.submit I18n.t('passwordless.sessions.new.submit'),
              class: "w-full inline-flex shrink-0 items-center justify-center gap-1 rounded-full font-medium px-4 py-1.5 text-sm bg-olive-950 text-white hover:bg-olive-800 dark:bg-olive-300 dark:text-olive-950 dark:hover:bg-olive-200 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:ring-offset-2 transition-colors duration-150 cursor-pointer" %>
        <% end %>

        <p class="mt-4 text-center text-xs text-olive-500 dark:text-olive-400">
          No account needed. Just enter your email.
        </p>
      <% end %>
    </div>
  <% end %>
<% end %>
