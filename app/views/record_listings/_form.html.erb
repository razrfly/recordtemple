<%= simple_form_for [@record,@record_listing] do |f| %>
  <%= f.error_messages %>

	<%= f.input :tumblr_type, :collection => RecordListing::TUMBLR_TYPES, :prompt => "Select Post Type" %>
	<%= f.input :title, :as => :string, :input_html => { :value => @record.artist.name } %>
	<%= f.input :body, :as => :text, :input_html => { :value => @record.desc } %>
	<%= f.input :tags, :as => :string, :input_html => { :value => "records, vinyl, 45s, recordtemple, LPs, vintage" } %>
	<%= f.input :record_id, :as => :hidden, :input_html => { :value => params[:record_id] } %>
	<%= f.input :listing_type, :as => :hidden, :input_html => { :value => "Tumblr" } %>

  	<%= f.button :submit %>
<% end %>
