<% if f.object.songs.present? %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h5 class="m-t-0">Related Songs</h5>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Song</th>
              <th>Title</th>
              <th>Uploaded</th>
              <th class="buttons"></th>
            </tr>
          </thead>

          <tbody>
            <% f.object.songs.each do |song| %>
              <tr>
                <td>
                  <%= link_to "#", Refile.attachment_url(
                    song, :audio), class: 'sm2_button' %>
                </td>

                <td><%= song.title || "No title" %></td>

                <td>
                  <%= distance_of_time_in_words_to_now(
                    song.created_at,
                    include_seconds: true
                    ) %> ago
                </td>

                <td class="buttons text-center">
                  <%= link_to icon("cog"), "#", class: 'text-muted',
                    style: 'margin-right:5px;' %>

                  <%= link_to icon("times"), record_song_path(f.object, song),
                    method: :delete, data: { confirm: "Are you sure?" },
                    class: 'text-muted' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
