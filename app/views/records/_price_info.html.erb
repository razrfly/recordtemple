<div class="<%= 'row' if f.object.new_record? %>">
  <div class="<%= 'col-md-6 col-md-offset-3' if
    f.object.new_record? %>">

    <div class="panel panel-default">
      <div class="panel-body">
        <h5 class="m-t-0">Price Info</h5>

        <div class="row">
          <div class="col-md-4">
            <dl>
              <dt>Artist</dt>
              <dd><%= price.artist_name %></dd>
            </dl>
          </div>

          <div class="col-md-4">
            <dl>
              <dt>Label</dt>
              <dd><%= price.label_name %></dd>
            </dl>
          </div>

          <div class="col-md-4">
            <dl>
              <dt>Format</dt>
              <dd><%= price.record_format_name %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
