<div class="container p-t-md">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">
          <h5 class="m-t-0">Cover image</h5>

          <div data-grid="images">
            <% if @record.photos.present? %>
              <%= image_tag attachment_url(@record.photos.first, :image, :fill, 200, 200),
                class: 'media-object', data: { width: 200, height: 200 } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-body">
          <h5 class="m-t-0">Record info</h5>

          <div class="row">
            <div class="col-sm-6">
              <dl>
                <dt>Artist</dt>
                <dd><%= @record.artist_name %></dd>
                <dt>Comment</dt>
                <dd><%= @record.comment %></dd>
                <dt>Label</dt>
                <dd><%= @record.label_name %></dd>
              </dl>
            </div>

            <div class="col-sm-6">
              <dl>
                <dt>Genre</dt>
                <dd><%= @record.genre_name %></dd>
                <dt>Format</dt>
                <dd><%= @record.record_format_name %></dd>
                <dt>Condition</dt>
                <dd><%= @record.get_condition %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
