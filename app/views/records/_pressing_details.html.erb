<%# Pressing details from Discogs - country, year, catalog number, format %>
<div class="mt-4 flex flex-wrap gap-2">
  <%# Country %>
  <% if discogs_release.country.present? %>
    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-olive-100 text-olive-700">
      <span class="text-sm"><%= country_flag_emoji(discogs_release.country) %></span>
      <%= discogs_release.country %>
    </span>
  <% end %>

  <%# Year %>
  <% if discogs_release.year.present? %>
    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-olive-100 text-olive-700">
      <svg class="w-3.5 h-3.5 text-olive-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <%= discogs_release.year %>
    </span>
  <% end %>

  <%# Catalog number %>
  <% if discogs_release.primary_catno.present? %>
    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-olive-100 text-olive-700">
      <svg class="w-3.5 h-3.5 text-olive-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
      </svg>
      <%= discogs_release.primary_catno %>
    </span>
  <% end %>

  <%# Format description %>
  <% format_desc = discogs_release.format_description %>
  <% if format_desc.present? %>
    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-olive-100 text-olive-700"
          title="<%= format_desc %>">
      <svg class="w-3.5 h-3.5 text-olive-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <%= truncate(format_desc, length: 30) %>
    </span>
  <% end %>
</div>
