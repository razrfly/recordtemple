<div class="container p-t-md">
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="m-t-0 m-b-0"
        style="display: inline-block; padding-top: 5px;">

        <%= @records.model_name.plural.humanize %>
      </h4>

      <span class="pull-right">
        <%= link_to "New", new_record_path,
          class: 'btn btn-primary-outline btn-sm' %>
      </span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/search_box', q: @q,
        search_fields: {
          label_association: 'label',
          artist_association: 'artist',
          genre_association: 'genre',
          record_format_association: 'record_format',
          condition: true,
          with_photos: true,
          with_songs: true
        } %>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <small class="pull-right">
            <%= page_entries_info @records %>
          </small>
          <h5 class="m-t-0">Results <small>
            <%= link_to 'export to csv', url_for(params.merge(:format => :csv)) %>
          </small></h5>

          <table class="table">
            <thead>
              <tr>
                <th>Artist</th>
                <th>Details</th>
                <th>Label</th>
                <th>Genre</th>
                <th>Format</th>
                <th>Condition</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @records.each do |record| %>
                <tr>
                  <td><%= record.artist_name %></td>
                  <td>
                    <%= record.price_detail %></strong>
                    <i><%= record.comment %></i>
                  </td>
                  <td><%= record.label_name %></td>
                  <td><%= record.genre_name %></td>
                  <td><%= record.record_format_name %></td>
                  <td><%= record.get_condition %></td>
                  <td>
                    <%= link_to record_path(record) do %>
                      <span class="icon icon-magnifying-glass"></span>
                    <% end %>
                    <% if record.songs.present? %>
                      <%= link_to record.songs.first.title,
                        Refile.attachment_url(record.songs.first, :audio),
                        class: 'sm2_button' %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="text-center">
          <%= paginate @records %>
        </div>
      </div>
    </div>
  </div>
</div>
