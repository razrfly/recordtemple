<% content_for :page_title do %>
  <%= @records.model_name.plural.humanize %>
<% end %>

<div class="container p-t-md">
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="m-t-0 m-b-0"
        style="display: inline-block; padding-top: 5px;">

        <%= @records.model_name.plural.humanize %>
      </h4>

      <span class="pull-right">
        <%= link_to "New", new_record_path,
          class: 'btn btn-primary-outline btn-sm' %>
      </span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= render 'records/search_panel/search_box', q: @q %>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <small class="pull-right">
            <%= page_entries_info @records %>
          </small>
          <h5 class="m-t-0">Results <small>
            <%= link_to 'export to csv', url_for(params.merge(:format => :csv)) %>
          </small></h5>

          <%= render 'records/search_panel/records_table', records: @records %>
        </div>

        <div class="text-center">
          <%= paginate @records %>
        </div>
      </div>
    </div>
  </div>
</div>
