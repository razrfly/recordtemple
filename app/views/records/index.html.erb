<div class="span3">
	<%= render 'filters' %>
</div>

<div class="span9">

	<p><%= page_entries_info @records %></p>

	<% unless @records.blank? %>
		<table class="stacked">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Age</th>
				</tr>
			</thead>
			<tbody>
		<% @records.each do |record| %>
			<tr>
				<td>
					<% unless record.cover_photo.blank? %>
						<%= image_tag record.cover_photo %>
					<% end %>
				</td>
				<td><%= record.artist.name %></td>
				<td><%= record.label.name %></td>
			</tr>


			
			
			<%#= record.desc %>
		<% end %>
			</tbody>
		</table>
	<% end %>

	<%= paginate @records %>
</div>