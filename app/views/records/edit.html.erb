<h1>Editing record</h1>

<% form_for(@record, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
<p>
  <b>Artist:</b>
  <%=h @record.price.artist %>
</p>

<p>
  <b>Label:</b>
  <%=h @record.price.label %>
</p>

<p>
  <b>Format:</b>
  <%=h @record.price.format %>
</p>
<p>
  <b>Detail:</b>
  <%=h @record.price.detail %>
</p>
<p>
  <b>Condition & Genre:</b><br>
	<%=f.select(:condition, @record.get_condition) %>
    <%=f.select(:genre, @record.get_genre) %>
</p>

<p><br><br>


<b>Attachments:</b><br>
	<% @record.photos.each do |photo| %>
	
		<% unless photo.nil? %>
			<%= link_to image_tag(photo.data.url(:thumb)), photo.data.url(:medium) %>
			
			<%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %><br>
			
			<br />
		<% end %>

	<% end %>
	
  <div id="photos">

  </div>
  <%= add_object_link("New Photo", f, @record.photos.build, "photo", "#photos") %>

</p>
  <p>
    <%= f.label :value, "My Value" %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @record %> |
<%= link_to 'Back', records_path %>
