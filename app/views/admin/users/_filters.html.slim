#filters
  = search_form_for [:admin, @search], builder: SimpleForm::FormBuilder, method: :put do |f|
    .panel.panel-default
      .panel-heading
        .panel-title Filters
      .panel-body

        .row
          .col-md-6
            = f.input :fname_cont, label: 'First Name', required: false
          .col-md-6
            = f.input :lname_cont, label: 'Last Name', required: false
        = f.input :username_cont, label: 'Username', required: false
        = f.input :email_cont, label: 'Email', required: false

        br/
        = f.button :submit, 'Search'
        = link_to 'Reset', admin_users_path, class: 'pull-right btn btn-default'
