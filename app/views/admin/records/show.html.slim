- breadcrumb :show_record, @record, @price

.panel.panel-default

  .panel-heading.record
    = link_to [:edit, :admin, @price, @record], class: 'btn btn-default btn-sm pull-right edit-link'
      i.fa.fa-wrench>
      | Edit record
    = link_to '#', class: 'btn btn-default btn-sm pull-right edit-link'
      i.fa.fa-wrench>
      | Edit audio
    = link_to '#', class: 'btn btn-default btn-sm pull-right edit-link'
      i.fa.fa-wrench>
      | Edit covers
  .panel-body

    .panel.panel-default.col-md-3.col-lg-5.col-xl-6
      .panel-heading
        .panel-title
          | Record ##{@record.identifier_id} details
      .panel-body
        table.table
          thead
            tr
              th
              th
          tbody
            tr.price-row
              td
                ul.price-list
                  li
                    strong Price
                  li User price
                  - unless @record.price.nil?
                    li Cyberguide
              td
                ul.price-list
                  li &nbsp;
                  li = @record.value
                  - unless @record.price.nil?
                    li = @record.cyberguide
            tr.price-row
              td
                strong Artist
              td= link_to @record.artist.name, [:admin, @record.artist]
            tr.price-row
              td
                strong Label
              td= link_to @record.label.name, [:admin, @record.label]
            tr.price-row
              td
                strong genre
              td= @record.genre.name
            tr.price-row
              td
                strong Format
              td= @record.record_format.name
            tr.price-row
              td
                strong Condition
              td= @record.get_condition
            tr.price-row
              td
                strong Comment
              td= @record.comment

    .col-md-9.col-lg-7.col-xl-6
      - if @record.photos.count > 0
        .cover-photo.medium data-img-large="#{@record.photos.first.data.url(:large)}" data-img="#{@record.photos.first.data.url(:medium)}"
        #covers
          - @record.photos.each do |photo|
            - if photo == @record.photos.first
              .cover-photo.small.active data-img-large="#{photo.data.url(:large)}" data-img-medium="#{photo.data.url(:medium)}" data-img="#{photo.data.url(:small)}"
            - else
                .cover-photo.small data-img-large="#{photo.data.url(:large)}" data-img-medium="#{photo.data.url(:medium)}" data-img="#{photo.data.url(:small)}"
      - if @record.songs.count > 0
        .panel.panel-default.col-md-12#audio
          .panel-heading
            .panel-title Audio
          .panel-body
            - @record.songs.each do |song|
              .audio.row
                .col-md-5
                  strong = song.title
                .col-md-7
                  audio controls=true
                    / source src="#{song.mp3.url}" type="#{song.mp3.content_type}"
                    | Your browser does not support the audio tag.